---
- name: Network Switches
  connection : local
  gather_facts: yes
  hosts: all
  vars_files:
           /etc/ansible/vault_switch_secret.yaml
  tasks:

  -  name: PULL CONFIG - DELL OS6 CONFIG
     dellos6_config:
       backup: yes
       authorize: yes
       backup_options:
         dir_path: "/mnt/d/switches_backup_locally"
         filename: "{{inventory_hostname}}_{{ansible_ssh_host}}_{{ lookup('pipe', 'date +%Y-%m-%d-%H%M') }}"
     register: config_output
     ignore_errors: yes
